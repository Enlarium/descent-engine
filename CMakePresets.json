{
	"version": 3,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 23,
		"patch": 0
	},
	"configurePresets": [
		{
			"name": "base",
			"hidden": true,
			"binaryDir": "${sourceDir}/build/${presetName}",
			"cacheVariables": {
				"BUILD_SHARED_LIBS": "OFF",
				"CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
				"BASE_FLAGS": "-std=c11 -pipe -Wall -Wextra -pedantic-errors -Wconversion -Werror",
				"DEFINITIONS": "VULKAN_HPP_NO_EXCEPTIONS"
			}
		},
		{
			"name": "platform-posix",
			"hidden": true,
			"cacheVariables": {
				"Vulkan_INCLUDE_DIR": "/usr/include/vulkan"
			}
		},
		{
			"name": "platform-mingw",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_SYSTEM_NAME": "Windows",
				"CMAKE_C_COMPILER_TARGET": "x86_64-w64-windows-gnu",
				"CMAKE_SYSROOT": "/usr/x86_64-w64-mingw32",
				"CMAKE_FIND_ROOT_PATH": "/usr/x86_64-w64-mingw32",
				"CMAKE_FIND_ROOT_PATH_MODE_PROGRAM": "NEVER",
				"CMAKE_FIND_ROOT_PATH_MODE_LIBRARY": "ONLY",
				"CMAKE_FIND_ROOT_PATH_MODE_INCLUDE": "ONLY",
				"CMAKE_RC_COMPILER": "x86_64-w64-mingw32-windres",
				"Vulkan_INCLUDE_DIR": "/usr/x86_64-w64-mingw32/include/vulkan",
				"Vulkan_LIBRARY": "/usr/x86_64-w64-mingw32/lib/libvulkan.a"
			}
		},
		{
			"name": "mode-debug",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug",
				"MODE_FLAGS":     "-Og -g -fno-inline -DDEBUG"
			}
		},
		{
			"name": "mode-perf",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release",
				"MODE_FLAGS":     "-O2 -g -flto=auto -DNDEBUG",
				"CMAKE_INTERPROCEDURAL_OPTIMIZATION": "ON"
			}
		},
		{
			"name": "mode-release",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release",
				"MODE_FLAGS":     "-O2 -flto=auto -DNDEBUG",
				"CMAKE_INTERPROCEDURAL_OPTIMIZATION": "ON"
			}
		},
		{
			"name": "compiler-gcc",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_C_COMPILER": "gcc"
			}
		},
		{
			"name": "compiler-clang",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_C_COMPILER": "clang"
			}
		},
		{
			"name": "compiler-intel",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_C_COMPILER": "icx"
			}
		},
		{
			"name": "compiler-mingw",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_C_COMPILER": "x86_64-w64-mingw32-gcc"
			}
		},
		{
			"name": "gcc-debug",
			"displayName": "GCC Debug",
			"description": "Debug build options for GCC",
			"inherits": ["base", "platform-posix", "mode-debug", "compiler-gcc"]
		},
		{
			"name": "gcc-perf",
			"displayName": "GCC Performance Testing",
			"description": "Performance-testing build options for GCC",
			"inherits": ["base", "platform-posix", "mode-perf", "compiler-gcc"]
		},
		{
			"name": "gcc",
			"displayName": "GCC Release",
			"description": "Release build options for GCC",
			"inherits": ["base", "platform-posix", "mode-release", "compiler-gcc"]
		},
		{
			"name": "clang-debug",
			"displayName": "Clang Debug",
			"description": "Debug build options for Clang",
			"inherits": ["base", "platform-posix", "mode-debug", "compiler-clang"]
		},
		{
			"name": "clang-perf",
			"displayName": "Clang Performance Testing",
			"description": "Performance-testing build options for Clang",
			"inherits": ["base", "platform-posix", "mode-perf", "compiler-clang"]
		},
		{
			"name": "clang",
			"displayName": "Clang Release",
			"description": "Release build options for Clang",
			"inherits": ["base", "platform-posix", "mode-release", "compiler-clang"]
		},
		{
			"name": "intel-debug",
			"displayName": "Intel Debug",
			"description": "Debug build options for Intel compiler",
			"inherits": ["base", "platform-posix", "mode-debug", "compiler-intel"]
		},
		{
			"name": "intel-perf",
			"displayName": "Intel Performance Testing",
			"description": "Performance-testing build options for Intel compiler",
			"inherits": ["base", "platform-posix", "mode-perf", "compiler-intel"]
		},
		{
			"name": "intel",
			"displayName": "Intel Release",
			"description": "Release build options for Intel compiler",
			"inherits": ["base", "platform-posix", "mode-release", "compiler-intel"]
		},
		{
			"name": "mingw-debug",
			"displayName": "MinGW Debug",
			"description": "Debug build options for MinGW + GCC",
			"inherits": ["base", "platform-mingw", "mode-debug", "compiler-mingw"]
		},
		{
			"name": "mingw-perf",
			"displayName": "MinGW Performance Testing",
			"description": "Performance-testing build options for MinGW + GCC",
			"inherits": ["base", "platform-mingw", "mode-perf", "compiler-mingw"]
		},
		{
			"name": "mingw",
			"displayName": "MinGW Release",
			"description": "Release build options for MinGW + GCC",
			"inherits": ["base", "platform-mingw", "mode-release", "compiler-mingw"]
		},
		{
			"name": "clang-mingw-base",
			"hidden": true,
			"inherits": "base",
			"cacheVariables": {
				"CMAKE_EXE_LINKER_FLAGS": "-fuse-ld=lld"
			}
		},
		{
			"name": "clang-mingw-debug",
			"displayName": "Clang MinGW Debug",
			"description": "Debug build options for MinGW + Clang",
			"inherits": ["clang-mingw-base", "platform-mingw", "mode-debug", "compiler-clang"]
		},
		{
			"name": "clang-mingw-perf",
			"displayName": "Clang MinGW Performance Testing",
			"description": "Performance-testing build options for MinGW + Clang",
			"inherits": ["clang-mingw-base", "platform-mingw", "mode-perf", "compiler-clang"]
		},
		{
			"name": "clang-mingw",
			"displayName": "Clang MinGW Release",
			"description": "Release build options for MinGW + Clang",
			"inherits": ["clang-mingw-base", "platform-mingw", "mode-release", "compiler-clang"]
		}
	]
}
